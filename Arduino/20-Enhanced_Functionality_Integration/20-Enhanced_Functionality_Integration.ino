#include <SoftwareSerial.h>
SoftwareSerial mySerial(11, 12);  //Rx=11, Tx=12

//Extra_Function------------
#define Add_End_Char 0x01
#define Without_End_Char 0x00
#define Add_Suffix 0x02
#define Without_Suffix 0x00
#define Add_Code_ID 0x04
#define Without_Code_ID 0x00
#define Add_Prefix 0x08
#define Without_Prefix 0x00
#define Add_RF 0x10
#define Without_RF 0x00
#define CR 0x00   // End_Char_Suffix_Type
#define CRLF 0x20 // End_Char_Suffix_Type
#define TAB 0x40  // End_Char_Suffix_Type
#define none 0x60    // End_Char_Suffix_Type
//--------------------------


//Prefix_And_Suffix_length--
#define Prefix_Length 0x00 // 0x00-0x0F : 0 - 15
#define Suffix_Length 0x00 // 0x00-0x0F : 0 - 15
//--------------------------

//Data_intercept_setting----
#define All 0x00     //Send all Data  
#define M_Data 0x01  //Send first M Data 
#define N_Data 0x02  //Send last N Data 
#define None_data 0x03    //Don’t send the first M+ the last N Data
//--------------------------

byte Extra_Function[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x60, Without_End_Char + Without_Suffix + Without_Code_ID + Without_Prefix + Without_RF + none, 0xAB, 0xCD};

byte Prefix_And_Suffix_length[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x62, Prefix_Length + Suffix_Length, 0xAB, 0xCD};
byte Prefix_data[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x63 /*0x63 - 0x71*/, 0x00 /*0x00 - 0xFF Max 15Byte*/, 0xAB, 0xCD};
byte Suffix_data[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x72 /*0x72 - 0x80*/, 0x00 /*0x00 - 0xFF Max 15Byte*/, 0xAB, 0xCD};

byte RF_Length[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x81, 0x00 /*0x00 - 0x0F*/, 0xAB, 0xCD};
byte RF_Data[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x82 /*0x82 - 0x90*/, 0x00 /*0x00 - 0xFF Max 15Byte */, 0xAB, 0xCD};

byte Code_ID[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0x91 /*0x91 - 0xA4 */, 0x00 /*0x41-0x5a & 0x61-0x7a（A-Z,a-z）：Relater to Code ID character */, 0xAB, 0xCD};
byte Data_intercept_setting[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0xB0, None_data, 0xAB, 0xCD};

byte Length_of_interception_M[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0xB1, 0x00 /*0x00-0xFF：0-255*/, 0xAB, 0xCD};
byte Length_of_interception_N[9] = {0x7E, 0x00, 0x08, 0x01, 0x00, 0xB2, 0x00 /*0x00-0xFF：0-255*/, 0xAB, 0xCD};


void setup() {
  Serial.begin(115200);
  mySerial.begin(9600);
  
  mySerial.write(Extra_Function, 9);
}

void loop() {
 if (mySerial.available()) {
    String receivedData = mySerial.readStringUntil('\n'); // Read entire data until newline character
    
    Serial.println(receivedData); // Print the data to Serial Monitor
  }
}
